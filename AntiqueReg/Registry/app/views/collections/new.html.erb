<% provide(:title, 'Create Collection') %>
<h4>Create Collection</h4>
<%= form_for @collection, url: {action: 'create'}, html: {class:'form-horizontal'} do |f|%>
    <div class="control-group">
      <label class="control-label" for="name">Collection Name</label>

      <div class="controls">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="control-group">
      <div class="controls">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    </div>
<% end %>