<% provide(:title, 'Profile') %>

<div class="fluid-row" xmlns="http://www.w3.org/1999/html">
  <div class="span5 text-center">
    <% if current_user.avatar.nil? %>
        <img src="http://placehold.it/250x250/AAAAAA/000000&text=Change+it+by+editing+your+profile">
    <% else %>
        <%= image_tag(current_user.avatar.image.url, :class => @profile_class) %>
    <% end %>
  </div>

  <div class="span6 text-left">
    <h4><%= "#{current_user.first_name } #{current_user.last_name }"%></h4>
    <p><a href="mailto:<%= current_user.email %>"><%= current_user.email %></a></p>
    <p></p>
    <p>Phone Number: <%= current_user.phone_number %></p>
    <p>Address: <%= "#{current_user.address}, #{current_user.city}, #{current_user.state} #{current_user.postal_code}" %></p>

  </div>
</div>